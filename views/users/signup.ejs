<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <h1 class="col-6 offset-3">Signup on <i>Wanderlust</i></h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" name="username" placeholder="Enter Username" class="form-control" id="username"
                        required>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="text" name="email" placeholder="Enter Your Email" class="form-control" id="email"
                        required>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" placeholder="Enter Password" class="form-control"
                        id="password" required>
                </div>

                <button class="btn btn-outline-danger">SignUp</button>
            </form>
            <div>
                Already have an account &nbsp;<a href="http://localhost:8080/login">Login</a>&nbsp;here
            </div>
        </div>
    </div>